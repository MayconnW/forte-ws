<p id="notice"><%= notice %></p>

<h1>Listing Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Imei</th>
      <th>Descricao</th>
      <th>Unidade</th>
      <th>Obs</th>
      <th>Preco</th>
      <th>Codbarras</th>
      <th>Franciona</th>
      <th>Ctrl preco</th>
      <th>Ctrl estoque</th>
      <th>Quantidade</th>
      <th>Max desc</th>
      <th>Max acresc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.codigo %></td>
        <td><%= produto.imei %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.unidade %></td>
        <td><%= produto.obs %></td>
        <td><%= produto.preco %></td>
        <td><%= produto.codbarras %></td>
        <td><%= produto.fraciona %></td>
        <td><%= produto.ctrl_preco %></td>
        <td><%= produto.ctrl_estoque %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.max_desc %></td>
        <td><%= produto.max_acresc %></td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

